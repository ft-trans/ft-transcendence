{
	"compilerOptions": {
		/* Basic Settings */
		"target": "ESNext",
		"module": "ESNext",

		/* Module Resolution */
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		/* Type Checking */
		"skipLibCheck": true,
		"types": ["node"],

		/* Output */
		"outDir": "dist",

		/* Path Aliases */
		"baseUrl": ".",
		"paths": {
			"@domain/*": ["./app/domain/*"],
			"@infra/*": ["./app/infra/*"],
			"@presentation/*": ["./app/presentation/*"],
			"@usecase/*": ["./app/usecase/*"]
		}
	},
	"include": ["app"]
}
