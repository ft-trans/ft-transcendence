{
	"compilerOptions": {
		/* Basic Settings */
		"target": "ESNext",
		"module": "ESNext",
		/* Module Resolution */
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		/* Type Checking */
		"skipLibCheck": true,
		"types": ["node"],
		/* Output */
		"outDir": "dist"
	},
	"include": ["app"]
}
