{
  "$schema": "https://swc.rs/schema.json",
  "jsc": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@domain/*": ["./app/domain/*"],
      "@infra/*": ["./app/infra/*"],
      "@presentation/*": ["./app/presentation/*"],
      "@usecase/*": ["./app/usecase/*"]
    },
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@domain/*": ["./app/domain/*"],
      "@infra/*": ["./app/infra/*"],
      "@presentation/*": ["./app/presentation/*"],
      "@usecase/*": ["./app/usecase/*"]
    },
    "target": "esnext",
    "keepClassNames": true,
    "loose": true
  },
  "module": {
    "type": "es6",
    "resolveFully": true,
    "strict": true,
    "strictMode": true,
    "lazy": false,
    "noInterop": true
  },
  "exclude": [
    ".*\\.spec\\.ts$",
    ".*\\.d\\.ts$",
    ".*/infra/database/generated/.*"
  ],
  "sourceMaps": "inline"
}
