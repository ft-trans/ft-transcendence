{
	"name": "ft-transcendence",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"typecheck": "tsc --build --noEmit",
		"build": "vite build && swc ./app/ -d dist && swc ./shared/ -d dist",
		"build:production": "vite build --mode production && swc ./app/ -d dist && swc ./shared/ -d dist",
		"dev": "node --import @swc-node/register/esm-register --env-file=.env ./app/main.ts --dev",
		"dev:tsx": "tsx watch --tsconfig ./tsconfig.app.json --env-file=.env ./app/main.ts --dev",
		"test": "vitest --run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.5",
		"@swc-node/register": "^1.10.10",
		"@swc/cli": "^0.7.7",
		"@swc/core": "^1.12.5",
		"@types/node": "^24.0.3",
		"@vitest/coverage-v8": "3.2.4",
		"prisma": "^6.10.1",
		"tsx": "^4.20.4",
		"typescript": "~5.8.3",
		"vite": "^6.3.5",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4",
		"vitest-mock-extended": "^3.1.0"
	},
	"packageManager": "pnpm@9.15.3+sha512.1f79bc245a66eb0b07c5d4d83131240774642caaa86ef7d0434ab47c0d16f66b04e21e0c086eb61e62c77efc4d7f7ec071afad3796af64892fae66509173893a",
	"dependencies": {
		"@fastify/redis": "^7.0.2",
		"@fastify/vite": "^8.1.3",
		"@prisma/client": "6.10.1",
		"@tailwindcss/vite": "^4.1.10",
		"axios": "^1.11.0",
		"fastify": "^5.4.0",
		"lodash-es": "^4.17.21",
		"path-to-regexp": "^8.2.0",
		"tailwindcss": "^4.1.10",
		"ulid": "^3.0.1",
		"zod": "^4.0.16"
	}
}